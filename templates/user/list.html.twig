{% extends 'base.html.twig' %}

{%  block title 'Les utilisateurs de la plateforme' %}

{%  block body %}

    <h1> Les utilisateurs de la plateforme</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Email</th>
                <th scope="col">Créé le
                <th scope="col"> Supprimé le compte utilisateur</th>
            </tr>
        </thead>
        <tbody>
            {%  for user in users %}
               <th scope="row">{{ user.id }}</th>
                <td>{{ user.email }}</td>
                <td>{{ user.createdAt|date('Y-m-d H:i') }}</td>
                <td>  {{ include('user/_delete_form.html.twig') }} </td>
            {% endfor %}
        </tbody>
    </table>

{%  endblock %}